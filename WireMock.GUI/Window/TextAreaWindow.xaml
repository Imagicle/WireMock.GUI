<Window x:Class="WireMock.GUI.Window.TextAreaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:window="clr-namespace:WireMock.GUI.Window"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Body" Height="450" Width="800">
    <Grid d:DataContext="{d:DesignInstance window:TextAreaWindow}"
          Margin="10 0 10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 x:Name="ResponseTextBox" />
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Padding="10 0"
                    Margin="10 10 0 0"
                    Content="Ok"
                    Click="OkButtonCommand" />
        </StackPanel>
    </Grid>
</Window>
